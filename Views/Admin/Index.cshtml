@model IEnumerable<EmlakciSitesi.Models.Ilan>

@{
    ViewData["Title"] = "Admin Paneli";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-4">
        <div class="text-center my-4">
            <h2>
                <div class="text-start">
                    <a href="/Admin/Yeni" class="text-decoration-none text-primary">
                        Yeni İlan Ekle
                    </a>
                </div>
            </h2>
        </div>

        <!-- İlan Listesi -->
        <div class="list-group">
            @foreach (var ilan in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@ilan.Baslik - @ilan.Fiyat TL</span>
                    <div>
                        <a href="@Url.Action("Edit", "Admin", new { id = ilan.Id })"
                            class="btn btn-warning btn-sm">Düzenle</a>
                        <form method="post" action="@Url.Action("Delete", "Admin", new { id = ilan.Id })" class="d-inline"
                            onsubmit="return confirm('Bu ilanı silmek istediğinize emin misiniz?');">
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>



    <!-- Admin Controller içinde çıkış işlemi -->
    <div class="d-grid gap-2">
        <a href="/Admin/Logout" class="btn btn-danger btn-lg">Çıkış Yap</a>
    </div>
    </div>
    </div>
</body>

</html>
