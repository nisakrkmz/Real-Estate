@{
    ViewData["Title"] = "Admin Girişi";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg p-4">
            <h4 class="card-title text-center mb-4">Giriş Yapın</h4>
            <form method="post" asp-action="Login">
                <div class="mb-3">
                    <label for="username" class="form-label">Kullanıcı Adı (Email)</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>

                @if (ViewData.ModelState != null && !ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <strong>Hata!</strong> Geçersiz kullanıcı adı veya şifre.
                    </div>
                }

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f7f7f7;
        font-family: 'Arial', sans-serif;
    }

    .card {
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-weight: 600;
        color: #333;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .alert-danger {
        font-weight: 500;
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
        border-radius: 5px;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 10px;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }
</style>

