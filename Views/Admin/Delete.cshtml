@model EmlakciSitesi.Models.Ilan

@{
    ViewData["Title"] = "İlanı Sil";
}

<h2>@ViewData["Title"]</h2>

<p>Bu ilanı silmek istediğinizden emin misiniz?</p>

<form method="post" action="@Url.Action("DeleteConfirmed", "Admin", new { id = Model.Id })">
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">İptal</a>
</form>
