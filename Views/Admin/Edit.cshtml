@model EmlakciSitesi.Models.Ilan

@{
    ViewData["Title"] = "İlan Düzenle";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="Baslik">Başlık</label>
        <input type="text" class="form-control" id="Baslik" name="Baslik" value="@Model.Baslik" required />
    </div>
    <div class="form-group">
        <label for="Aciklama">Açıklama</label>
        <textarea class="form-control" id="Aciklama" name="Aciklama" required>@Model.Aciklama</textarea>
    </div>
    <div class="form-group">
        <label for="Fiyat">Fiyat</label>
        <input type="number" class="form-control" id="Fiyat" name="Fiyat" value="@Model.Fiyat" required />
    </div>
    <div class="form-group">
        <label for="Sehir">Şehir</label>
        <input type="text" class="form-control" id="Sehir" name="Sehir" value="@Model.Sehir" required />
    </div>
    <div class="form-group">
        <label for="ResimUrl">Resim URL</label>
        <input type="text" class="form-control" id="ResimUrl" name="ResimUrl" value="@Model.ResimUrl" />
    </div>

    <!-- Gizli ID alanı, güncelleme işlemi için gerekli -->
    <input type="hidden" name="Id" value="@Model.Id" />

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
