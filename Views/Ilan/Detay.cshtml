@model EmlakciSitesi.Models.Ilan

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Baslik - Detay</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>@Model.Baslik</h1>
        <img src="@Model.ResimUrl" alt="@Model.Baslik" class="img-fluid">
        <p><strong>Açıklama:</strong> @Model.Aciklama</p>
        <p><strong>Fiyat:</strong> @Model.Fiyat</p>
        <a href="/Ilan/Index" class="btn btn-primary">Geri Dön</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
