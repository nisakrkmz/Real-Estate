@model RealEstate.Models.Listing

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title - Detay</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>@Model.Title</h1>
        <p><strong></strong></p>
        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid">
        <p><strong>Açıklama:</strong> @Model.Description</p>
        <p><strong>Fiyat:</strong> @Model.Price</p>
        <a href="/Listing/Index" class="btn btn-primary">Geri Dön</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
