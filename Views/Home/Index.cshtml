@{
    ViewData["Title"] = "Ana Sayfa";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
            color: #333;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        nav {
            background-color: #34495e;
            padding: 10px;
        }

        nav a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            font-size: 1.2rem;
        }

        .hero {
            background-color: #64809a;
            color: white;
            padding: 50px 20px;
            border-bottom-left-radius: 50% 20px;
            border-bottom-right-radius: 50% 20px;
        }

        .hero h1 {
            font-size: 2.5rem;
        }

        .features {
            display: flex;
            justify-content: center;
            gap: 20px;
            padding: 30px;
            flex-wrap: wrap;
        }

        .feature {
            background: #ecf0f1;
            padding: 20px;
            border-radius: 8px;
            width: 250px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .social {
            margin-top: 30px;
        }

        .social a {
            font-size: 2rem;
            color: #e4405f;
            transition: color 0.3s;
        }

        .social a:hover {
            color: #c13584;
        }

        footer {
            background-color: #34495e;
            color: white;
            padding: 10px;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <nav>
        <a href="#home">Ana Sayfa</a>
        <a href="#features">İlanlar</a>
        <a href="#contact">İletişim</a>
    </nav>

    <div id="home" class="hero">
        <h1>Sinop 57 Emlak Ofisine Hoşgeldiniz!</h1>
        <p>Ev kiralayın veya satın, arsanızı kolayca satın!</p>
    </div>

    <div id="features" class="features">
        <div class="feature">
            <h3>İlan Yayını</h3>
            <p>İlanınızı hızlıca yayınlıyoruz.</p>
        </div>
        <div class="feature">
            <h3>Geniş Seçenek</h3>
            <p>Kiralık ve satılık birçok ilan.</p>
        </div>
        <div class="feature">
            <h3>Güvenli İletişim</h3>
            <p>Alıcı ve satıcı arasında güvenli bağlantı.</p>
        </div>
    </div>

    <div id="contact" class="social">
        <p>İlanları ayrıntılı şekilde görüntülemek için instagram sayfamızı ziyaret edebilirsiniz</p>
        <a href="https://www.instagram.com/sinop_57_emlak/" target="_blank" title="Instagram"><i class="bi bi-instagram"></i></a>
    </div>

    <footer>
        <p>&copy; 2025 Sinop 57 Emlak Ofisi - Tüm hakları saklıdır.</p>
    </footer>
</body>

</html>
